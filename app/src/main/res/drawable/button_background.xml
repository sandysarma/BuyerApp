<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/appColorGreenPress" />
            <stroke android:width="1dp" android:color="@color/appColorGreenPress" />
            <corners android:radius="6dp" />
            <gradient android:angle="270" android:endColor="@color/appColorGreenPress" android:startColor="@color/appColorGreenPress" android:type="linear" />

        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/appColorGreen" />
            <stroke android:width="1dp" android:color="@color/white" />
            <corners android:radius="6dp" />
            <gradient android:angle="270" android:endColor="@color/appColorGreen" android:startColor="@color/appColorGreen" android:type="linear" />

        </shape>
    </item>

</selector>
